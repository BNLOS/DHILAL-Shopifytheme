<div class="list-collections section">
  <div class="container">
    <h1 class="list-collections__title">{{ 'collections.general.title' | t }}</h1>
    
    <div class="list-collections__grid">
      {% for collection in collections %}
        {% unless collection.handle == 'frontpage' %}
          <div class="collection-card animate-fade-in">
            <div class="collection-card__image">
              {% if collection.image %}
                <img src="{{ collection.image | image_url: width: 600 }}" alt="{{ collection.image.alt }}">
              {% elsif collection.products.first %}
                <img src="{{ collection.products.first.featured_image | image_url: width: 600 }}" alt="{{ collection.title }}">
              {% else %}
                {{ 'collection-1' | placeholder_svg_tag: 'placeholder-svg' }}
              {% endif %}
            </div>
            
            <div class="collection-card__content">
              <h2 class="collection-card__title">
                <a href="{{ collection.url }}">{{ collection.title }}</a>
              </h2>
              
              <p class="collection-card__product-count">
                {{ collection.all_products_count }} {{ 'collections.general.products' | t }}
              </p>
              
              <a href="{{ collection.url }}" class="collection-card__link">
                {{ 'collections.general.view_all' | t }}
              </a>
            </div>
          </div>
        {% endunless %}
      {% endfor %}
    </div>
  </div>
</div>

<style>
  .list-collections__title {
    font-size: 4rem;
    margin-bottom: 3rem;
    text-align: center;
  }
  
  .list-collections__grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 3rem;
  }
  
  .collection-card {
    background-color: rgba(255, 255, 255, 0.05);
    border-radius: var(--border-radius-large);
    overflow: hidden;
    transition: all var(--transition-speed);
    height: 100%;
    display: flex;
    flex-direction: column;
  }
  
  .collection-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 20px var(--color-shadow);
  }
  
  .collection-card__image {
    height: 250px;
    overflow: hidden;
  }
  
  .collection-card__image img,
  .collection-card__image svg {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform var(--transition-speed);
  }
  
  .collection-card:hover .collection-card__image img,
  .collection-card:hover .collection-card__image svg {
    transform: scale(1.05);
  }
  
  .collection-card__content {
    padding: 2rem;
    flex-grow: 1;
    display: flex;
    flex-direction: column;
  }
  
  .collection-card__title {
    font-size: 2rem;
    margin-bottom: 1rem;
  }
  
  .collection-card__title a {
    color: var(--color-foreground);
    transition: color var(--transition-speed);
  }
  
  .collection-card__title a:hover {
    color: var(--color-accent);
  }
  
  .collection-card__product-count {
    color: rgba(255, 255, 255, 0.7);
    margin-bottom: 1.5rem;
  }
  
  .collection-card__link {
    color: var(--color-accent);
    font-weight: 600;
    margin-top: auto;
  }
  
  @media screen and (max-width: 990px) {
    .list-collections__grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
  
  @media screen and (max-width: 749px) {
    .list-collections__grid {
      grid-template-columns: 1fr;
    }
    
    .list-collections__title {
      font-size: 3rem;
    }
  }
</style>