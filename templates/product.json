{
  "sections": {
    "main": {
      "type": "main-product",
      "blocks": {
        "title": {
          "type": "title",
          "settings": {
            "show_vendor": true
          }
        },
        "price": {
          "type": "price",
          "settings": {
            "show_tax_and_shipping": true
          }
        },
        "variant-picker": {
          "type": "variant-picker",
          "settings": {
            "show_variant_labels": true
          }
        },
        "quantity-selector": {
          "type": "quantity-selector",
          "settings": {
            "show_label": true
          }
        },
        "buy-buttons": {
          "type": "buy-buttons",
          "settings": {
            "show_dynamic_checkout": true,
            "show_gift_card_recipient": true
          }
        },
        "description": {
          "type": "description",
          "settings": {
            "show_title": true
          }
        },
        "share": {
