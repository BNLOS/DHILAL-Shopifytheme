<div class="page">
  <div class="container">
    <h1 class="page__title">{{ page.title }}</h1>
    
    {% if page.handle == 'features' %}
      {%- comment -%} Features Page Content {%- endcomment -%}
      <div class="features">
        <div class="features__header">
          <h1 class="features__title">{{ page.title }}</h1>
          
          {% if page.content != blank %}
            <div class="features__description">{{ page.content }}</div>
          {% endif %}
        </div>
        
        <div class="features__grid stagger-animation">
          {% for i in (1..6) %}
            <div class="feature-card animate-fade-in">
              <div class="feature-card__icon">
                {% render 'icon', name: 'feature-icon-' | append: i %}
              </div>
              <h3 class="feature-card__title">{{ 'features.feature_' | append: i | t }}</h3>
              <p class="feature-card__description">{{ 'features.feature_' | append: i | append: '_description' | t }}</p>
            </div>
          {% endfor %}
        </div>
      </div>
    {% else %}
      {%- comment -%} Regular Page Content {%- endcomment -%}
      <div class="page__content">
        {{ page.content }}
      </div>
    {% endif %}
  </div>
</div>

<style>
  .page {
    padding: var(--padding-section);
  }
  
  .page__title {
    font-size: 4rem;
    margin-bottom: 2rem;
    text-align: center;
  }
  
  .page__content {
    max-width: 800px;
    margin: 0 auto;
    color: rgba(255, 255, 255, 0.9);
    line-height: 1.6;
  }
  
  @media screen and (max-width: 749px) {
    .page__title {
      font-size: 3rem;
    }
  }
</style>