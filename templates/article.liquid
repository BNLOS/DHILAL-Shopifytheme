<article class="article section">
  <div class="container">
    <div class="article__wrapper">
      <div class="article__content">
        <h1 class="article__title">{{ article.title }}</h1>
        
        <div class="article__meta">
          <span class="article__date">{{ article.published_at | date: format: 'date' }}</span>
          <span class="article__author">{{ article.author }}</span>
        </div>
        
        <div class="article__image">
          {% if article.image %}
            <img src="{{ article.image | image_url: width: 1200 }}" alt="{{ article.image.alt }}">
          {% endif %}
        </div>
        
        <div class="article__body">
          {{ article.content }}
        </div>
      </div>
      
      <div class="article__sidebar">
        {% if blog.tags.size > 0 %}
          <div class="article__tags">
            <h3>{{ 'blogs.article.tags' | t }}</h3>
            <ul>
              {% for tag in blog.tags %}
                <li>{{ tag | link_to_tag: tag }}</li>
              {% endfor %}
            </ul>
          </div>
        {% endif %}
        
        {% if blog.next_article or blog.previous_article %}
          <div class="article__pagination">
            {% if blog.previous_article %}
              <a href="{{ blog.previous_article.url }}" class="article__pagination-prev">
                {{ 'blogs.article.previous_post' | t }}
              </a>
            {% endif %}
            
            {% if blog.next_article %}
              <a href="{{ blog.next_article.url }}" class="article__pagination-next">
                {{ 'blogs.article.next_post' | t }}
              </a>
            {% endif %}
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</article>

<style>
  .article__wrapper {
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: 4rem;
  }
  
  .article__title {
    font-size: 3.5rem;
    margin-bottom: 1.5rem;
  }
  
  .article__meta {
    display: flex;
    gap: 1.5rem;
    margin-bottom: 2rem;
    color: rgba(255, 255, 255, 0.7);
  }
  
  .article__image {
    margin-bottom: 2rem;
    border-radius: var(--border-radius-large);
    overflow: hidden;
  }
  
  .article__image img {
    width: 100%;
    height: auto;
  }
  
  .article__body {
    font-size: 1.8rem;
    line-height: 1.6;
    color: rgba(255, 255, 255, 0.9);
  }
  
  .article__tags {
    margin-bottom: 2rem;
  }
  
  .article__tags h3 {
    font-size: 1.8rem;
    margin-bottom: 1rem;
  }
  
  .article__tags ul {
    list-style: none;
    padding: 0;
  }
  
  .article__tags li {
    margin-bottom: 0.5rem;
  }
  
  .article__tags a {
    color: var(--color-accent);
  }
  
  .article__pagination {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }
  
  .article__pagination a {
    color: var(--color-accent);
  }
  
  @media screen and (max-width: 990px) {
    .article__wrapper {
      grid-template-columns: 1fr;
    }
  }
</style>