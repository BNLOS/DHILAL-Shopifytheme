<div class="customers-addresses section">
  <div class="container">
    <h1 class="customers-addresses__title">{{ 'customer.addresses.title' | t }}</h1>
    
    <div class="customers-addresses__actions">
      <button type="button" class="button" id="AddAddress" onclick="Shopify.CustomerAddress.toggleNewForm();">
        {{ 'customer.addresses.add_new' | t }}
      </button>
    </div>
    
    <div id="AddressNewForm" class="customers-addresses__form" style="display: none;">
      {% form 'customer_address', customer.new_address %}
        <h2>{{ 'customer.addresses.add_new' | t }}</h2>
        
        <div class="customers-addresses__form-group">
          <label for="AddressFirstNameNew">{{ 'customer.addresses.first_name' | t }}</label>
          <input type="text" id="AddressFirstNameNew" name="address[first_name]" value="{{ form.first_name }}" autocomplete="given-name">
        </div>
        
        <div class="customers-addresses__form-group">
          <label for="AddressLastNameNew">{{ 'customer.addresses.last_name' | t }}</label>
          <input type="text" id="AddressLastNameNew" name="address[last_name]" value="{{ form.last_name }}" autocomplete="family-name">
        </div>
        
        <div class="customers-addresses__form-group">
          <label for="AddressCompanyNew">{{ 'customer.addresses.company' | t }}</label>
          <input type="text" id="AddressCompanyNew" name="address[company]" value="{{ form.company }}" autocomplete="organization">
        </div>
        
        <div class="customers-addresses__form-group">
          <label for="AddressAddress1New">{{ 'customer.addresses.address1' | t }}</label>
          <input type="text" id="AddressAddress1New" name="address[address1]" value="{{ form.address1 }}" autocomplete="address-line1">
        </div>
        
        <div class="customers-addresses__form-group">
          <label for="AddressAddress2New">{{ 'customer.addresses.address2' | t }}</label>
          <input type="text" id="AddressAddress2New" name="address[address2]" value="{{ form.address2 }}" autocomplete="address-line2">
        </div>
        
        <div class="customers-addresses__form-group">
          <label for="AddressCityNew">{{ 'customer.addresses.city' | t }}</label>
          <input type="text" id="AddressCityNew" name="address[city]" value="{{ form.city }}" autocomplete="address-level2">
        </div>
        
        <div class="customers-addresses__form-group">
          <label for="AddressCountryNew">{{ 'customer.addresses.country' | t }}</label>
          <select id="AddressCountryNew" name="address[country]" data-default="{{ form.country }}" autocomplete="country">{{ country_option_tags }}</select>
        </div>
        
        <div id="AddressProvinceContainerNew" style="display: none;">
          <label for="AddressProvinceNew">{{ 'customer.addresses.province' | t }}</label>
          <select id="AddressProvinceNew" name="address[province]" data-default="{{ form.province }}" autocomplete="address-level1"></select>
        </div>
        
        <div class="customers-addresses__form-group">
          <label for="AddressZipNew">{{ 'customer.addresses.zip' | t }}</label>
          <input type="text" id="AddressZipNew" name="address[zip]" value="{{ form.zip }}" autocomplete="postal-code">
        </div>
        
        <div class="customers-addresses__form-group">
          <label for="AddressPhoneNew">{{ 'customer.addresses.phone' | t }}</label>
          <input type="tel" id="AddressPhoneNew" name="address[phone]" value="{{ form.phone }}" autocomplete="tel">
        </div>
        
        <div class="customers-addresses__form-group">
          {{ form.set_as_default_checkbox }}
          <label for="address_default_address_new">{{ 'customer.addresses.set_default' | t }}</label>
        </div>
        
        <div class="customers-addresses__form-actions">
          <button type="submit" class="button">{{ 'customer.addresses.add' | t }}</button>
          <button type="button" class="button button--secondary" onclick="Shopify.CustomerAddress.toggleNewForm();">{{ 'customer.addresses.cancel' | t }}</button>
        </div>
      {% endform %}
    </div>
    
    <div class="customers-addresses__list">
      {% for address in customer.addresses %}
        <div class="customers-addresses__item">
          <div class="customers-addresses__item-content">
            {{ address | format_address }}
            
            {% if address == customer.default_address %}
              <span class="customers-addresses__default">{{ 'customer.addresses.default' | t }}</span>
            {% endif %}
          </div>
          
          <div class="customers-addresses__item-actions">
            <button type="button" class="button button--small" onclick="Shopify.CustomerAddress.toggleForm({{ address.id }});">
              {{ 'customer.addresses.edit' | t }}
            </button>
            <button type="button" class="button button--small button--secondary" onclick="Shopify.CustomerAddress.destroy({{ address.id }}, '{{ 'customer.addresses.delete_confirm' | t }}');">
              {{ 'customer.addresses.delete' | t }}
            </button>
          </div>
          
          <div id="EditAddress_{{ address.id }}" class="customers-addresses__form" style="display: none;">
            {% form 'customer_address', address %}
              <h2>{{ 'customer.addresses.edit_address' | t }}</h2>
              
              <div class="customers-addresses__form-group">
                <label for="AddressFirstName_{{ form.id }}">{{ 'customer.addresses.first_name' | t }}</label>
                <input type="text" id="AddressFirstName_{{ form.id }}" name="address[first_name]" value="{{ form.first_name }}" autocomplete="given-name">
              </div>
              
              <div class="customers-addresses__form-group">
                <label for="AddressLastName_{{ form.id }}">{{ 'customer.addresses.last_name' | t }}</label>
                <input type="text" id="AddressLastName_{{ form.id }}" name="address[last_name]" value="{{ form.last_name }}" autocomplete="family-name">
              </div>
              
              <div class="customers-addresses__form-group">
                <label for="AddressCompany_{{ form.id }}">{{ 'customer.addresses.company' | t }}</label>
                <input type="text" id="AddressCompany_{{ form.id }}" name="address[company]" value="{{ form.company }}" autocomplete="organization">
              </div>
              
              <div class="customers-addresses__form-group">
                <label for="AddressAddress1_{{ form.id }}">{{ 'customer.addresses.address1' | t }}</label>
                <input type="text" id="AddressAddress1_{{ form.id }}" name="address[address1]" value="{{ form.address1 }}" autocomplete="address-line1">
              </div>
              
              <div class="customers-addresses__form-group">
                <label for="AddressAddress2_{{ form.id }}">{{ 'customer.addresses.address2' | t }}</label>
                <input type="text" id="AddressAddress2_{{ form.id }}" name="address[address2]" value="{{ form.address2 }}" autocomplete="address-line2">
              </div>
              
              <div class="customers-addresses__form-group">
                <label for="AddressCity_{{ form.id }}">{{ 'customer.addresses.city' | t }}</label>
                <input type="text" id="AddressCity_{{ form.id }}" name="address[city]" value="{{ form.city }}" autocomplete="address-level2">
              </div>
              
              <div class="customers-addresses__form-group">
                <label for="AddressCountry_{{ form.id }}">{{ 'customer.addresses.country' | t }}</label>
                <select id="AddressCountry_{{ form.id }}" name="address[country]" data-default="{{ form.country }}" autocomplete="country">{{ country_option_tags }}</select>
              </div>
              
              <div id="AddressProvinceContainer_{{ form.id }}" style="display: none;">
                <label for="AddressProvince_{{ form.id }}">{{ 'customer.addresses.province' | t }}</label>
                <select id="AddressProvince_{{ form.id }}" name="address[province]" data-default="{{ form.province }}" autocomplete="address-level1"></select>
              </div>
              
              <div class="customers-addresses__form-group">
                <label for="AddressZip_{{ form.id }}">{{ 'customer.addresses.zip' | t }}</label>
                <input type="text" id="AddressZip_{{ form.id }}" name="address[zip]" value="{{ form.zip }}" autocomplete="postal-code">
              </div>
              
              <div class="customers-addresses__form-group">
                <label for="AddressPhone_{{ form.id }}">{{ 'customer.addresses.phone' | t }}</label>
                <input type="tel" id="AddressPhone_{{ form.id }}" name="address[phone]" value="{{ form.phone }}" autocomplete="tel">
              </div>
              
              <div class="customers-addresses__form-group">
                {{ form.set_as_default_checkbox }}
                <label for="address_default_address_{{ form.id }}">{{ 'customer.addresses.set_default' | t }}</label>
              </div>
              
              <div class="customers-addresses__form-actions">
                <button type="submit" class="button">{{ 'customer.addresses.update' | t }}</button>
                <button type="button" class="button button--secondary" onclick="Shopify.CustomerAddress.toggleForm({{ form.id }});">{{ 'customer.addresses.cancel' | t }}</button>
              </div>
            {% endform %}
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

<script>
  // Initialize observers on address selectors
  new Shopify.CountryProvinceSelector('AddressCountryNew', 'AddressProvinceNew', {
    hideElement: 'AddressProvinceContainerNew'
  });

  // Setup province selector on each customer address
  {% for address in customer.addresses %}
    new Shopify.CountryProvinceSelector('AddressCountry_{{ address.id }}', 'AddressProvince_{{ address.id }}', {
      hideElement: 'AddressProvinceContainer_{{ address.id }}'
    });
  {% endfor %}
</script>

<style>
  .customers-addresses__title {
    font-size: 4rem;
    margin-bottom: 2rem;
    text-align: center;
  }
  
  .customers-addresses__actions {
    margin-bottom: 2rem;
  }
  
  .customers-addresses__list {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 2rem;
  }
  
  .customers-addresses__item {
    background-color: rgba(255, 255, 255, 0.05);
    border-radius: var(--border-radius-large);
    padding: 2rem;
  }
  
  .customers-addresses__item-content {
    margin-bottom: 1.5rem;
    line-height: 1.6;
  }
  
  .customers-addresses__default {
    display: inline-block;
    background-color: var(--color-accent);
    color: var(--color-foreground);
    padding: 0.3rem 0.8rem;
    border-radius: var(--border-radius);
    font-size: 1.2rem;
    margin-top: 1rem;
  }
  
  .customers-addresses__item-actions {
    display: flex;
    gap: 1rem;
  }
  
  .customers-addresses__form {
    background-color: rgba(255, 255, 255, 0.05);
    border-radius: var(--border-radius-large);
    padding: 2rem;
    margin-bottom: 2rem;
  }
  
  .customers-addresses__form h2 {
    font-size: 2rem;
    margin-bottom: 1.5rem;
  }
  
  .customers-addresses__form-group {
    margin-bottom: 1.5rem;
  }
  
  .customers-addresses__form-group label {
    display: block;
    margin-bottom: 0.5rem;
    font-weight: 600;
  }
  
  .customers-addresses__form-group input,
  .customers-addresses__form-group select {
    width: 100%;
    padding: 1rem;
    background-color: rgba(255, 255, 255, 0.1);
    border: none;
    border-radius: var(--border-radius);
    color: var(--color-foreground);
  }
  
  .customers-addresses__form-actions {
    display: flex;
    gap: 1rem;
  }
  
  .button--small {
    padding: 0.8rem 1.5rem;
    font-size: 1.4rem;
  }
  
  @media screen and (max-width: 749px) {
    .customers-addresses__list {
      grid-template-columns: 1fr;
    }
    
    .customers-addresses__item-actions {
      flex-direction: column;
    }
    
    .customers-addresses__form-actions {
      flex-direction: column;
    }
  }
</style>