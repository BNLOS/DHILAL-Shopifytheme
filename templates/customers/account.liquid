<div class="customers-account section">
  <div class="container">
    <h1 class="customers-account__title">{{ 'customer.account.title' | t }}</h1>
    
    <div class="customers-account__grid">
      <div class="customers-account__orders">
        <h2 class="customers-account__subtitle">{{ 'customer.orders.title' | t }}</h2>
        
        {% paginate customer.orders by 20 %}
          {% if customer.orders.size > 0 %}
            <div class="customers-account__orders-table">
              <table>
                <thead>
                  <tr>
                    <th>{{ 'customer.orders.order_number' | t }}</th>
                    <th>{{ 'customer.orders.date' | t }}</th>
                    <th>{{ 'customer.orders.payment_status' | t }}</th>
                    <th>{{ 'customer.orders.fulfillment_status' | t }}</th>
                    <th>{{ 'customer.orders.total' | t }}</th>
                  </tr>
                </thead>
                <tbody>
                  {% for order in customer.orders %}
                    <tr>
                      <td>
                        <a href="{{ order.customer_url }}" class="customers-account__order-number">
                          {{ order.name }}
                        </a>
                      </td>
                      <td>{{ order.created_at | date: format: 'date' }}</td>
                      <td>{{ order.financial_status_label }}</td>
                      <td>{{ order.fulfillment_status_label }}</td>
                      <td>{{ order.total_price | money }}</td>
                    </tr>
                  {% endfor %}
                </tbody>
              </table>
            </div>
          {% else %}
            <p>{{ 'customer.orders.none' | t }}</p>
          {% endif %}
          
          {% if paginate.pages > 1 %}
            <div class="customers-account__pagination">
              {{ paginate | default_pagination }}
            </div>
          {% endif %}
        {% endpaginate %}
      </div>
      
      <div class="customers-account__details">
        <h2 class="customers-account__subtitle">{{ 'customer.account.details' | t }}</h2>
        
        <div class="customers-account__info">
          <p class="customers-account__name">{{ customer.name }}</p>
          <p class="customers-account__email">{{ customer.email }}</p>
          
          {% if customer.default_address %}
            <div class="customers-account__address">
              <h3>{{ 'customer.addresses.default' | t }}</h3>
              <p>
                {{ customer.default_address.first_name }} {{ customer.default_address.last_name }}<br>
                {% if customer.default_address.company %}
                  {{ customer.default_address.company }}<br>
                {% endif %}
                {% if customer.default_address.street %}
                  {{ customer.default_address.street }}<br>
                {% endif %}
                {{ customer.default_address.city }}, {{ customer.default_address.province }}<br>
                {{ customer.default_address.zip }}<br>
                {{ customer.default_address.country }}
              </p>
            </div>
          {% endif %}
        </div>
        
        <div class="customers-account__actions">
          <a href="{{ routes.account_addresses_url }}" class="button">
            {{ 'customer.account.view_addresses' | t }} ({{ customer.addresses_count }})
          </a>
          
          <a href="{{ routes.account_logout_url }}" class="button button--secondary">
            {{ 'customer.log_out' | t }}
          </a>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .customers-account__title {
    font-size: 4rem;
    margin-bottom: 3rem;
    text-align: center;
  }
  
  .customers-account__grid {
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: 4rem;
  }
  
  .customers-account__subtitle {
    font-size: 2rem;
    margin-bottom: 1.5rem;
  }
  
  .customers-account__orders-table {
    overflow-x: auto;
  }
  
  .customers-account__orders-table table {
    width: 100%;
    border-collapse: collapse;
  }
  
  .customers-account__orders-table th,
  .customers-account__orders-table td {
    padding: 1rem;
    text-align: left;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }
  
  .customers-account__order-number {
    color: var(--color-accent);
  }
  
  .customers-account__info {
    margin-bottom: 2rem;
  }
  
  .customers-account__name {
    font-size: 1.8rem;
    margin-bottom: 0.5rem;
  }
  
  .customers-account__email {
    margin-bottom: 1.5rem;
    color: rgba(255, 255, 255, 0.7);
  }
  
  .customers-account__address h3 {
    font-size: 1.6rem;
    margin-bottom: 1rem;
  }
  
  .customers-account__address p {
    color: rgba(255, 255, 255, 0.7);
    line-height: 1.6;
  }
  
  .customers-account__actions {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }
  
  @media screen and (max-width: 990px) {
    .customers-account__grid {
      grid-template-columns: 1fr;
    }
  }
</style>