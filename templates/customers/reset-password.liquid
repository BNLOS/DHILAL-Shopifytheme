<div class="customers-reset-password section">
  <div class="container">
    <div class="customers-reset-password__wrapper">
      <h1 class="customers-reset-password__title">{{ 'customer.reset_password.title' | t }}</h1>
      
      {% form 'reset_customer_password' %}
        {{ form.errors | default_errors }}
        
        <div class="customers-reset-password__form-group">
          <label for="ResetPassword">{{ 'customer.reset_password.password' | t }}</label>
          <input type="password" name="customer[password]" id="ResetPassword" autocomplete="new-password" required>
        </div>
        
        <div class="customers-reset-password__form-group">
          <label for="PasswordConfirmation">{{ 'customer.reset_password.password_confirm' | t }}</label>
          <input type="password" name="customer[password_confirmation]" id="PasswordConfirmation" autocomplete="new-password" required>
        </div>
        
        <button type="submit" class="button">{{ 'customer.reset_password.submit' | t }}</button>
      {% endform %}
    </div>
  </div>
</div>

<style>
  .customers-reset-password__wrapper {
    max-width: 500px;
    margin: 0 auto;
    text-align: center;
  }
  
  .customers-reset-password__title {
    font-size: 3rem;
    margin-bottom: 2rem;
  }
  
  .customers-reset-password__form-group {
    margin-bottom: 1.5rem;
    text-align: left;
  }
  
  .customers-reset-password__form-group label {
    display: block;
    margin-bottom: 0.5rem;
    font-weight: 600;
  }
  
  .customers-reset-password__form-group input {
    width: 100%;
    padding: 1rem;
    background-color: rgba(255, 255, 255, 0.1);
    border: none;
    border-radius: var(--border-radius);
    color: var(--color-foreground);
  }
</style>