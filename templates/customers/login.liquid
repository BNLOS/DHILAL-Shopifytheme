<div class="customers-login section">
  <div class="container">
    <div class="customers-login__grid">
      <div class="customers-login__login">
        <h1 class="customers-login__title">{{ 'customer.login.title' | t }}</h1>
        
        {% form 'customer_login' %}
          {{ form.errors | default_errors }}
          
          <div class="customers-login__form-group">
            <label for="CustomerEmail">{{ 'customer.login.email' | t }}</label>
            <input type="email" name="customer[email]" id="CustomerEmail" autocomplete="email" autocorrect="off" autocapitalize="off" autofocus>
          </div>
          
          {% if form.password_needed %}
            <div class="customers-login__form-group">
              <label for="CustomerPassword">{{ 'customer.login.password' | t }}</label>
              <input type="password" name="customer[password]" id="CustomerPassword" autocomplete="current-password">
            </div>
          {% endif %}
          
          <div class="customers-login__form-actions">
            <button type="submit" class="button">{{ 'customer.login.sign_in' | t }}</button>
            
            {% if form.password_needed %}
              <a href="#recover" class="customers-login__recover-link">{{ 'customer.login.forgot_password' | t }}</a>
            {% endif %}
          </div>
        {% endform %}
        
        {% if shop.checkout.guest_login %}
          <div class="customers-login__guest">
            <h2>{{ 'customer.login.guest_title' | t }}</h2>
            {% form 'guest_login' %}
              <button type="submit" class="button">{{ 'customer.login.guest_continue' | t }}</button>
            {% endform %}
          </div>
        {% endif %}
      </div>
      
      <div class="customers-login__register">
        <h2 class="customers-login__subtitle">{{ 'customer.login.new_customer' | t }}</h2>
        <p>{{ 'customer.login.new_customer_paragraph' | t }}</p>
        <a href="{{ routes.account_register_url }}" class="button">{{ 'customer.login.create_account' | t }}</a>
      </div>
    </div>
    
    <div id="recover" class="customers-login__recover" style="display: none;">
      <h2 class="customers-login__title">{{ 'customer.recover_password.title' | t }}</h2>
      <p>{{ 'customer.recover_password.subtext' | t }}</p>
      
      {% form 'recover_customer_password' %}
        {{ form.errors | default_errors }}
        
        {% if form.posted_successfully? %}
          <span class="customers-login__reset-success">
            {{ 'customer.recover_password.success' | t }}
          </span>
        {% endif %}
        
        <div class="customers-login__form-group">
          <label for="RecoverEmail">{{ 'customer.recover_password.email' | t }}</label>
          <input type="email" name="email" id="RecoverEmail" autocorrect="off" autocapitalize="off" autocomplete="email">
        </div>
        
        <div class="customers-login__form-actions">
          <button type="submit" class="button">{{ 'customer.recover_password.submit' | t }}</button>
          <a href="#login" class="customers-login__cancel-link">{{ 'customer.recover_password.cancel' | t }}</a>
        </div>
      {% endform %}
    </div>
  </div>
</div>

<style>
  .customers-login__grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    margin-bottom: 3rem;
  }
  
  .customers-login__title {
    font-size: 3rem;
    margin-bottom: 2rem;
  }
  
  .customers-login__subtitle {
    font-size: 2rem;
    margin-bottom: 1rem;
  }
  
  .customers-login__form-group {
    margin-bottom: 1.5rem;
  }
  
  .customers-login__form-group label {
    display: block;
    margin-bottom: 0.5rem;
    font-weight: 600;
  }
  
  .customers-login__form-group input {
    width: 100%;
    padding: 1rem;
    background-color: rgba(255, 255, 255, 0.1);
    border: none;
    border-radius: var(--border-radius);
    color: var(--color-foreground);
  }
  
  .customers-login__form-actions {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  
  .customers-login__recover-link,
  .customers-login__cancel-link {
    color: var(--color-accent);
  }
  
  .customers-login__guest {
    margin-top: 3rem;
    padding-top: 3rem;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
  }
  
  .customers-login__guest h2 {
    font-size: 1.8rem;
    margin-bottom: 1rem;
  }
  
  .customers-login__recover {
    max-width: 600px;
    margin: 0 auto;
    padding: 3rem;
    background-color: rgba(255, 255, 255, 0.05);
    border-radius: var(--border-radius-large);
  }
  
  .customers-login__reset-success {
    display: block;
    margin-bottom: 1.5rem;
    color: var(--color-accent);
  }
  
  @media screen and (max-width: 990px) {
    .customers-login__grid {
      grid-template-columns: 1fr;
    }
  }
</style>