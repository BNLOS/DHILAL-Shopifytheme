<div class="blog section">
  <div class="container">
    <h1 class="blog__title">{{ blog.title }}</h1>
    
    {% if blog.description != blank %}
      <div class="blog__description">{{ blog.description }}</div>
    {% endif %}
    
    <div class="blog__articles">
      {% for article in blog.articles %}
        <article class="blog-article">
          <div class="blog-article__image">
            {% if article.image %}
              <img src="{{ article.image | image_url: width: 600 }}" alt="{{ article.image.alt }}">
            {% else %}
              {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
            {% endif %}
          </div>
          
          <div class="blog-article__content">
            <h2 class="blog-article__title">
              <a href="{{ article.url }}">{{ article.title }}</a>
            </h2>
            
            <div class="blog-article__meta">
              <span class="blog-article__date">{{ article.published_at | date: format: 'date' }}</span>
              <span class="blog-article__author">{{ article.author }}</span>
            </div>
            
            <div class="blog-article__excerpt">
              {% if article.excerpt.size > 0 %}
                {{ article.excerpt }}
              {% else %}
                {{ article.content | strip_html | truncate: 150 }}
              {% endif %}
            </div>
            
            <a href="{{ article.url }}" class="blog-article__read-more">
              {{ 'blogs.article.read_more' | t }}
            </a>
          </div>
        </article>
      {% endfor %}
    </div>
    
    {% if paginate.pages > 1 %}
      <div class="blog__pagination">
        {{ paginate | default_pagination }}
      </div>
    {% endif %}
  </div>
</div>

<style>
  .blog__title {
    font-size: 4rem;
    margin-bottom: 1.5rem;
    text-align: center;
  }
  
  .blog__description {
    max-width: 800px;
    margin: 0 auto 3rem;
    text-align: center;
    color: rgba(255, 255, 255, 0.8);
  }
  
  .blog__articles {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 3rem;
  }
  
  .blog-article {
    background-color: rgba(255, 255, 255, 0.05);
    border-radius: var(--border-radius-large);
    overflow: hidden;
    transition: all var(--transition-speed);
  }
  
  .blog-article:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 20px var(--color-shadow);
  }
  
  .blog-article__image {
    height: 200px;
    overflow: hidden;
  }
  
  .blog-article__image img,
  .blog-article__image svg {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform var(--transition-speed);
  }
  
  .blog-article:hover .blog-article__image img,
  .blog-article:hover .blog-article__image svg {
    transform: scale(1.05);
  }
  
  .blog-article__content {
    padding: 2rem;
  }
  
  .blog-article__title {
    font-size: 2rem;
    margin-bottom: 1rem;
  }
  
  .blog-article__title a {
    color: var(--color-foreground);
    transition: color var(--transition-speed);
  }
  
  .blog-article__title a:hover {
    color: var(--color-accent);
  }
  
  .blog-article__meta {
    display: flex;
    gap: 1rem;
    margin-bottom: 1rem;
    color: rgba(255, 255, 255, 0.7);
    font-size: 1.4rem;
  }
  
  .blog-article__excerpt {
    margin-bottom: 1.5rem;
    color: rgba(255, 255, 255, 0.8);
  }
  
  .blog-article__read-more {
    color: var(--color-accent);
    font-weight: 600;
  }
  
  .blog__pagination {
    display: flex;
    justify-content: center;
    margin-top: 3rem;
  }
  
  .blog__pagination .pagination {
    display: flex;
    gap: 0.5rem;
  }
  
  .blog__pagination .pagination li {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 4rem;
    height: 4rem;
    background-color: rgba(255, 255, 255, 0.1);
    border-radius: var(--border-radius);
    transition: all var(--transition-speed);
  }
  
  .blog__pagination .pagination li:hover {
    background-color: var(--color-accent);
  }
  
  .blog__pagination .pagination li.active {
    background-color: var(--color-accent);
  }
  
  .blog__pagination .pagination a {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 100%;
    color: var(--color-foreground);
  }
  
  @media screen and (max-width: 1200px) {
    .blog__articles {
      grid-template-columns: repeat(2, 1fr);
    }
  }
  
  @media screen and (max-width: 749px) {
    .blog__articles {
      grid-template-columns: 1fr;
    }
    
    .blog__title {
      font-size: 3rem;
    }
  }
</style>