<div class="product-card animate-fade-in">
  {% if product.featured_image %}
    <div class="product-card__image-wrapper">
      <img src="{{ product.featured_image | image_url: width: 500 }}" alt="{{ product.featured_image.alt }}" class="product-card__image">
      
      {% if product.available == false %}
        <span class="product-card__badge">{{ 'products.product.sold_out' | t }}</span>
      {% elsif product.compare_at_price > product.price %}
        <span class="product-card__badge">{{ 'products.product.sale' | t }}</span>
      {% endif %}
    </div>
  {% endif %}
  
  <div class="product-card__content">
    <h3 class="product-card__title">{{ product.title }}</h3>
    
    {% if product.vendor %}
      <div class="product-card__vendor">{{ product.vendor }}</div>
    {% endif %}
    
    <div class="product-card__price">
      <span class="product-card__price-regular">{{ product.price | money }}</span>
      
      {% if product.compare_at_price > product.price %}
        <span class="product-card__price-sale">{{ product.compare_at_price | money }}</span>
      {% endif %}
    </div>
    
    {% if product.available %}
      <button class="product-card__quick-add" data-variant-id="{{ product.first_available_variant.id }}">
        {% render 'icon', name: 'plus' %}
      </button>
    {% endif %}
  </div>
</div>