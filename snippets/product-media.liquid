{% case media.media_type %}
  {% when 'image' %}
    <img
      src="{{ media | image_url: width: 800 }}"
      alt="{{ media.alt }}"
      loading="lazy"
      width="800"
      height="800">
  
  {% when 'video' %}
    <video
      controls
      autoplay
      muted
      loop
      playsinline>
      <source src="{{ media.sources[1].url }}" type="{{ media.sources[1].mime_type }}">
    </video>
  
  {% when 'model' %}
    <model-viewer
      src="{{ media | model_viewer_url }}"
      ios-src="{{ media | model_viewer_url: ios_sdk: true }}"
      ar
      ar-modes="webview scene-viewer quick-look"
      camera-controls
      alt="{{ media.alt }}">
    </model-viewer>
{% endcase %}