[
  {
    "name": "theme_info",
    "theme_name": "Noir RTL",
    "theme_version": "1.0.0",
    "theme_author": "Your Store",
    "theme_documentation_url": "https://help.shopify.com/",
    "theme_support_url": "https://support.shopify.com/"
  },
  {
    "name": "Logo",
    "settings": [
      {
        "type": "image_picker",
        "id": "logo",
        "label": "Logo image"
      },
      {
        "type": "range",
        "id": "logo_width",
        "min": 50,
        "max": 300,
        "step": 10,
        "unit": "px",
        "label": "Logo width",
        "default": 150
      }
    ]
  },
  {
    "name": "Colors",
    "settings": [
      {
        "type": "header",
        "content": "Theme uses black and white only"
      }
    ]
  },
  {
    "name": "Typography",
    "settings": [
      {
        "type": "font_picker",
        "id": "type_header_font",
        "default": "helvetica_n7",
        "label": "Heading font"
      },
      {
        "type": "font_picker",
        "id": "type_body_font",
        "default": "helvetica_n4",
        "label": "Body font"
      }
    ]
  },
  {
    "name": "Animation",
    "settings": [
      {
        "type": "checkbox",
        "id": "animations_enabled",
        "default": true,
        "label": "Enable animations"
      },
      {
        "type": "range",
        "id": "animation_duration",
        "min": 200,
        "max": 1000,
        "step": 100,
        "unit": "ms",
        "label": "Animation duration",
        "default": 500
      }
    ]
  },
  {
    "name": "Social media",
    "settings": [
      {
        "type": "text",
        "id": "social_facebook_link",
        "label": "Facebook",
        "info": "https://facebook.com/shopify"
      },
      {
        "type": "text",
        "id": "social_instagram_link",
        "label": "Instagram",
        "info": "https://instagram.com/shopify"
      },
      {
        "type": "text",
        "id": "social_twitter_link",
        "label": "Twitter",
        "info": "https://twitter.com/shopify"
      },
      {
        "type": "text",
        "id": "social_youtube_link",
        "label": "YouTube",
        "info": "https://youtube.com/shopify"
      }
    ]
  },
  {
    "name": "Favicon",
    "settings": [
      {
        "type": "image_picker",
        "id": "favicon",
        "label": "Favicon image",
        "info": "32 x 32px .png recommended"
      }
    ]
  },
  {
    "name": "Custom CSS",
    "settings": [
      {
        "type": "textarea",
        "id": "custom_css",
        "label": "Custom CSS",
        "info": "Add custom CSS to override theme styles"
      }
    ]
  }
]