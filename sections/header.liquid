<header class="header">
  <div class="container">
    <div class="header__wrapper">
      <div class="header__logo">
        <a href="{{ routes.root_url }}">
          {% if settings.logo != blank %}
            <img src="{{ settings.logo | image_url: width: 180 }}" alt="{{ shop.name }}">
          {% else %}
            <span class="header__logo-text">{{ shop.name }}</span>
          {% endif %}
        </a>
      </div>
      
      <nav class="header__menu">
        <ul class="header__menu-list">
          {% for link in linklists.main-menu.links %}
            <li class="header__menu-item {% if link.active %}header__menu-item--active{% endif %}">
              <a href="{{ link.url }}">{{ link.title }}</a>
            </li>
          {% endfor %}
        </ul>
      </nav>
      
      <div class="header__icons">
        <a href="{{ routes.search_url }}" class="header__icon" aria-label="Search">
          {% render 'icon', name: 'search' %}
        </a>
        <a href="{{ routes.account_url }}" class="header__icon" aria-label="Account">
          {% render 'icon', name: 'account' %}
        </a>
        <a href="{{ routes.cart_url }}" class="header__icon" aria-label="Cart">
          {% render 'icon', name: 'cart' %}
          <span class="cart-count">{{ cart.item_count }}</span>
        </a>
        
        <button class="header__menu-toggle" aria-label="Menu">
          <span></span>
          <span></span>
          <span></span>
        </button>
      </div>
    </div>
  </div>
</header>