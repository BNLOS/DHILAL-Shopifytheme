<div class="featured-collection section">
  <div class="container">
    <div class="featured-collection__header">
      <h2 class="featured-collection__title">{{ section.settings.title }}</h2>
      {% if section.settings.description != blank %}
        <p class="featured-collection__description">{{ section.settings.description }}</p>
      {% endif %}
    </div>
    
    <div class="featured-collection__products">
      {% for product in section.settings.collection.products limit: section.settings.products_to_show %}
        {% render 'product-card', product: product %}
      {% endfor %}
    </div>
    
    {% if section.settings.show_view_all %}
      <div class="featured-collection__view-all">
        <a href="{{ section.settings.collection.url }}" class="button">{{ 'collections.general.view_all' | t }}</a>
      </div>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Featured Collection",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Featured Collection"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "range",
      "id": "products_to_show",
      "min": 1,
      "max": 12,
      "step": 1,
      "default": 4,
      "label": "Products to show"
    },
    {
      "type": "checkbox",
      "id": "show_view_all",
      "default": true,
      "label": "Show 'View all' button"
    }
  ],
  "presets": [
    {
      "name": "Featured Collection",
      "category": "Collection"
    }
  ]
}
{% endschema %}

<style>
  .featured-collection__header {
    text-align: center;
    margin-bottom: 3rem;
  }
  
  .featured-collection__title {
    font-size: 3rem;
    margin-bottom: 1rem;
  }
  
  .featured-collection__description {
    max-width: 600px;
    margin: 0 auto;
    color: rgba(255, 255, 255, 0.8);
  }
  
  .featured-collection__products {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 2rem;
  }
  
  .featured-collection__view-all {
    text-align: center;
    margin-top: 3rem;
  }
  
  @media screen and (max-width: 1200px) {
    .featured-collection__products {
      grid-template-columns: repeat(3, 1fr);
    }
  }
  
  @media screen and (max-width: 990px) {
    .featured-collection__products {
      grid-template-columns: repeat(2, 1fr);
    }
  }
  
  @media screen and (max-width: 749px) {
    .featured-collection__products {
      grid-template-columns: 1fr;
    }
    
    .featured-collection__title {
      font-size: 2.5rem;
    }
  }
</style>