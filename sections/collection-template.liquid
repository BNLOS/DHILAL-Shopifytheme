<div class="collection">
  <div class="container">
    <div class="collection__header">
      <h1 class="collection__title">{{ collection.title }}</h1>
      
      {% if collection.description != blank %}
        <div class="collection__description">{{ collection.description }}</div>
      {% endif %}
    </div>
    
    <div class="collection__filters">
      <button class="collection__filter-button">
        {% render 'icon', name: 'filter' %}
        {{ 'collections.general.filter' | t }}
      </button>
      
      <div class="collection__sort">
        <label for="sort-by">{{ 'collections.general.sort_by' | t }}</label>
        <select id="sort-by" class="collection__sort-select">
          <option value="manual">{{ 'collections.general.featured' | t }}</option>
          <option value="best-selling">{{ 'collections.general.best_selling' | t }}</option>
          <option value="title-ascending">{{ 'collections.general.alphabetically' | t }}</option>
          <option value="title-descending">{{ 'collections.general.alphabetically_reversed' | t }}</option>
          <option value="price-ascending">{{ 'collections.general.price_ascending' | t }}</option>
          <option value="price-descending">{{ 'collections.general.price_descending' | t }}</option>
          <option value="created-descending">{{ 'collections.general.date_descending' | t }}</option>
        </select>
      </div>
    </div>
    
    <div class="collection__products">
      {% for product in collection.products %}
        {% render 'product-card', product: product %}
      {% else %}
        <p>{{ 'collections.general.no_matches' | t }}</p>
      {% endfor %}
    </div>
  </div>
</div>