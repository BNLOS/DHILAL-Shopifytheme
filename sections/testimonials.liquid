<div class="testimonials">
  <div class="testimonials__inner">
    {% if section.settings.title != blank %}
      <h2 class="testimonials__title">{{ section.settings.title }}</h2>
    {% endif %}
    
    <div class="testimonials__grid">
      {% for block in section.blocks %}
        <div class="testimonial" {{ block.shopify_attributes }}>
          <div class="testimonial__content">
            {{ block.settings.testimonial }}
          </div>
          
          <div class="testimonial__author">
            {% if block.settings.author_image != blank %}
              <img
                src="{{ block.settings.author_image | image_url: width: 100 }}"
                alt="{{ block.settings.author_name }}"
                loading="lazy"
                width="50"
                height="50">
            {% endif %}
            
            <div>
              <h4>{{ block.settings.author_name }}</h4>
              <p>{{ block.settings.author_title }}</p>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Testimonials",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "العنوان",
      "default": "آراء العملاء"
    }
  ],
  "blocks": [
    {
      "type": "testimonial",
      "name": "Testimonial",
      "settings": [
        {
          "type": "richtext",
          "id": "testimonial",
          "label": "الشهادة",
          "default": "<p>منتج رائع جداً، أنصح به بشدة</p>"
        },
        {
          "type": "text",
          "id": "author_name",
          "label": "اسم العميل",
          "default": "أحمد محمد"
        },
        {
          "type": "text",
          "id": "author_title",
          "label": "منصب العميل",
          "default": "مدير تنفيذي"
        },
        {
          "type": "image_picker",
          "id": "author_image",
          "label": "صورة العميل"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Testimonials",
      "category": "Custom",
      "blocks": [
        {
          "type": "testimonial"
        },
        {
          "type": "testimonial"
        },
        {
          "type": "testimonial"
        }
      ]
    }
  ]
}
{% endschema %}